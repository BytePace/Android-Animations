<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/main_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    android:paddingStart="30dp"
    android:paddingBottom="50dp"
    android:paddingEnd="30dp">

    <View android:id="@+id/marker1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/marker"
        android:layout_marginTop="100dp" />

    <View android:id="@+id/marker2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/marker"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp" />

    <View android:id="@+id/marker3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/marker"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp" />

    <View android:id="@+id/marker4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/marker"
        android:layout_marginStart="125dp"
        android:layout_marginTop="200dp" />

    <View android:id="@+id/marker5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/marker"
        android:layout_marginStart="175dp"
        android:layout_marginTop="125dp" />

    <View android:id="@+id/marker6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/marker"
        android:layout_marginStart="225dp"
        android:layout_marginTop="75dp" />

    <View android:id="@+id/marker7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/marker"
        android:layout_marginStart="250dp"
        android:layout_marginTop="200dp" />

    <Button android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="@string/start"
        android:textSize="20sp" />

</RelativeLayout>